

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#202020"


    >




<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:animateLayoutChanges="true"

    >




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000">

            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="10dp"
                android:src="@drawable/settings"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/title"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:textSize="40sp"

            android:layout_centerInParent="true"
               ></TextView>

            <ImageView
                android:id="@+id/mapsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/maps"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>









<android.support.v4.view.ViewPager
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.9"
    android:animateLayoutChanges="true">



    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/maps"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="#404040"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.23"
            android:background="@drawable/rounded_corner"
            android:layout_margin="20dp"
            >







            <AutoCompleteTextView
                android:id="@+id/searchText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Enter Location"
                android:singleLine="true"
                android:textSize="20dp"
                android:dropDownWidth="fill_parent"
               />


            </RelativeLayout>















    </LinearLayout>

    <LinearLayout

        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="#404040"
        android:orientation="vertical"
        android:weightSum="1"
        android:animateLayoutChanges="true"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tempScaleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature Scale "
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                />

            <ToggleButton

                android:id="@+id/toggleButton"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textColor="#000000"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:textOn="F°"
                android:textOff="C°"

                />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </View>

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:paddingBottom="20dp"
            android:background="#1A000000"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <TextView
                android:id="@+id/aboutinfo"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app was created by TeamGG for their coursework. The data is provided from the MET Office."
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>



            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </View>

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:padding="20dp"
            android:background="#1A000000">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>


            <TextView
                android:id="@+id/contactinfo"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email me on mbhadracant@gmail.com"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>



        </LinearLayout>


    </LinearLayout>



</LinearLayout>









</FrameLayout><!-- From: file:/Users/MB/Desktop/App%20Development/WeatherApp/app/src/main/res/layout/activity_weather.xml -->